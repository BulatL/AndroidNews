<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <!-- Add this, so AppBarLayout has a bug, which causes ViewPager not to show listview entirely on the screen
            Adding this view fixes (workaround) the problem -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />
        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">


                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                <TextView
                    android:gravity="center"
                    android:id="@+id/titleRead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="32dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/AuthorRead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/dateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/AuthorRead"
                        />
                </RelativeLayout>



                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tagRead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        />
                    <TextView
                        android:id="@+id/likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="2000"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/image_likes"
                        />
                    <ImageButton
                        android:id="@+id/image_likes"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@null"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@id/image_dislikes"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_thumb_up_green_24dp"
                        android:onClick="btnLikePost"/>

                    <ImageButton
                        android:id="@+id/image_dislikes"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@null"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@id/disLikes"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_thumb_down_red_24dp"
                        android:onClick="btnDislikePost"/>

                    <TextView
                        android:id="@+id/disLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="155"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                    </LinearLayout>
                </ScrollView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:id="@+id/EnterComments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter comment here"/>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_add_green_24dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/listViewContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ListView
                        android:id="@+id/listOfComments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </LinearLayout>



            <android.support.design.widget.NavigationView
                android:id="@+id/navigationView"
                app:headerLayout="@layout/header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_gravity="start"
                app:itemTextColor="@color/darkGrey"
                app:itemIconTint="@color/darkGrey"
                app:menu="@menu/drawermenu">

            </android.support.design.widget.NavigationView>


        </android.support.v4.widget.DrawerLayout>

    </LinearLayout>
