<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/comment_image"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:contentDescription="@null"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/comment_image"
        android:gravity="center"
        tools:text="@tools:sample/lorem" />


    <ImageButton
        android:id="@+id/btnDeleteComment"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_clear_red_24dp"
        android:background="@color/white"
        android:onClick="btnDeleteComment"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/comment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_title"
        android:layout_toEndOf="@id/comment_image"
        android:gravity="center"
        tools:text="@tools:sample/lorem" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_image"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            tools:text="by AuthorName" />

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="2000"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/image_likes"
            />
        <ImageButton
            android:id="@+id/image_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/image_dislikes"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:src="@drawable/ic_thumb_up_green_24dp" />

        <ImageButton
            android:id="@+id/image_dislikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/disLikes"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:src="@drawable/ic_thumb_down_red_24dp" />

        <TextView
            android:id="@+id/disLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="155"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</RelativeLayout>